<!DOCTYPE module SYSTEM "module.dtd">

<module name="cv_detect_floor" dir="computer_vision">
  <doc>
    <description>Floor detector
    
    </description>
    <define name="FLOOR_DETECTOR_FPS" value="0" description="Desired FPS (0: camera rate)"/>
  </doc>

  <settings>
    <dl_settings>
      <dl_settings name="FloorDetector">
         <dl_setting var="fd_test_setting" min="0" step="0.1" max="359.9" shortname="test"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <depends>video_thread</depends>

  <header>
    <file name="cv_detect_floor.h"/>
  </header>

  <init fun="floor_detector_init()"/>
  <periodic fun="floor_detector_periodic()" freq="50"/>
  <makefile target="ap|nps">
    <file name="cv_detect_floor.c"/>
  </makefile>
</module>

