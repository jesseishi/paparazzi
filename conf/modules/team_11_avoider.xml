<!DOCTYPE module SYSTEM "module.dtd">

<module name="team_11_avoider">
  <doc>
    <description>
Create description
    </description>
    <define name="ORANGE_AVOIDER_VISUAL_DETECTION_ID" value="ABI_BROADCAST" description="which VISUAL_DETECTION message to recieve for orange pole detection."/>
    <define name="FLOOR_FRONT_CAM_VISUAL_DETECTION_ID" value="ABI_BROADCAST" description="which VISUAL_DETECTION message to recieve for floor detection from front cam."/>
    <define name="FLOOR_BOTTOM_CAM_VISUAL_DETECTION_ID" value="ABI_BROADCAST" description="which VISUAL_DETECTION message to recieve for floor detection from bottom cam."/>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="Team11Avoider">
         <dl_setting var="debug_enabled" min="0" step="1" max="1" values="False|True"/>
      </dl_settings>
      <dl_settings name="Debug">
      	<dl_setting var="stepsx" min="-50" step = "1" max = "50"/>
      	<dl_setting var="stepsy" min="-50" step = "1" max = "50"/>
      	<dl_setting var="stepper_velx" min="0" step = "0.1" max = "2.0" shortname = "velx"/>
      	<dl_setting var="stepper_vely" min="0" step = "0.1" max = "2.0" shortname = "vely"/>
      	<dl_setting var="heading" min="0" step = "0.01" max = "6.28" shortname = "hdg"/>
      </dl_settings> 
    </dl_settings> 
  </settings> 
  
  <depends>cv_detect_color_object,cv_opticflow</depends>
  <header>
    <file name="team_11_avoider.h"/>
    <file name="stepper.h"/>
    <file name="defines.h"/>
  </header>
  <init fun="team_11_avoider_init()"/>
  <periodic fun="team_11_avoider_periodic()" freq="10"/>
  <makefile target="ap|nps">
    <file name="team_11_avoider.c"/>
    <file name="stepper.c"/>
  </makefile>
</module>
